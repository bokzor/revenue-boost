{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "#site/content": [
        "./.velite"
      ],
      "~/domains/*": [
        "../app/domains/*"
      ],
      "~/shared/*": [
        "../app/shared/*"
      ],
      "~/lib/*": [
        "../app/lib/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "../app/domains/**/*.ts",
    "../app/domains/**/*.tsx",
    "../app/shared/**/*.ts",
    "../app/shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
