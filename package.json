{
  "name": "revenue-boost",
  "private": true,
  "scripts": {
    "build": "react-router build",
    "predev": "node scripts/clear-redis.mjs",
    "dev": "npm run build:storefront:dev && shopify app dev",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "react-router-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy",
    "db:scratch": "prisma migrate reset --force",
    "lint": "eslint --ignore-path .eslintignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --ignore-path .eslintignore --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "graphql-codegen": "graphql-codegen",
    "format:write": "prettier \"app/**/*.{ts,tsx,js,jsx,html,md,scss,json}\" --write",
    "vite": "vite",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:integration:watch": "vitest -c vitest.integration.config.ts",
    "test:db:reset": "DATABASE_URL='postgresql://postgres:postgres@localhost:5432/revenue-boost-test' npx prisma migrate reset --force",
    "test:e2e": "playwright test ",
    "test:e2e:admin": "playwright test --project=admin",
    "test:e2e:storefront": "playwright test --project=storefront",
    "dev:test": "NODE_ENV=test DATABASE_URL='postgresql://postgres:postgres@localhost:5432/revenue-boost-test' react-router dev --port=56687",
    "build:storefront": "node scripts/build-storefront.js",
    "build:storefront:dev": "BUILD_MODE=development node scripts/build-storefront.js",
    "build:storefront:staging": "BUILD_MODE=staging node scripts/build-storefront.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@react-router/dev": "^7.9.3",
    "@react-router/fs-routes": "^7.9.3",
    "@react-router/node": "^7.9.3",
    "@react-router/serve": "^7.9.3",
    "@shopify/app-bridge-react": "^4.2.4",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-app-react-router": "^1.0.0",
    "@shopify/shopify-app-session-storage-prisma": "^7.0.0",
    "dotenv": "^17.2.3",
    "immer": "^10.2.0",
    "ioredis": "^5.8.2",
    "isbot": "^5.1.31",
    "preact": "^10.27.2",
    "prisma": "^6.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@getverdict/mock-bridge": "^1.0.4",
    "@playwright/test": "^1.56.1",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@shopify/polaris-types": "^1.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^4.0.8",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "graphql-config": "^5.1.1",
    "happy-dom": "^20.0.10",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "shadow-dom-testing-library": "^1.13.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vitest": "^4.0.8"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "overrides": {
    "p-map": "^4.0.0"
  },
  "author": "bokzor"
}
